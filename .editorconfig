root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true

[*.{c,cpp,h}]
max_line_length = 80

[*.py]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 80
quote_type = single

[Makefile]
indent_style = tab
indent_size = 4
